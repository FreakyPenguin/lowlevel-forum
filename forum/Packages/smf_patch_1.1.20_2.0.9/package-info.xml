	<name>SMF 1.1.20 / 2.0.9 Update</name>
	<version>1.0</version>
	<type>modification</type>

	<install for="1.1.19">
		<readme type="inline">
			This patch file will fix several security issues for your SMF 1.1.19 forum.
		</readme>
		<modification type="file" format="xml">smf_1-1-20_patch.xml</modification>
	</install>
	<install for="2.0.8">
		<readme type="inline">
			This patch file will provide important stability fixes to your SMF 2.0.8 forum.
		</readme>
		<modification type="file" format="xml">smf_2-0-9_patch.xml</modification>
