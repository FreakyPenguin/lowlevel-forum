<?xml version="1.0"?>
<!DOCTYPE package-info SYSTEM "http://www.simplemachines.org/xml/package-info">
<package-info xmlns="http://www.simplemachines.org/xml/package-info" xmlns:smf="http://www.simplemachines.org/">
	<id>smf:smf-2.0.11</id>
	<name>SMF 2.0.11 Update</name>
	<version>1.0</version>
	<type>modification</type>

	<install for="2.0.10">
		<readme type="inline">
			This patch file will provide important security fixes to your SMF 2.0.10 forum.
		</readme>
		<modification type="file" format="xml">smf_2-0-11_patch.xml</modification>
	</install>
	<uninstall for="2.0.11">
		<readme type="inline">
			This will uninstall the security fixes of your SMF 2.0.11 forum. This is generally NOT a good idea.
		</readme>
		<modification type="file" reverse="true" format="xml">smf_2-0-11_patch.xml</modification>
	</uninstall>
</package-info>
